\define getFullscreen(value)
<$view tiddler="$:/plugins/admls/volant/config/fullscreen-values" field="""fullscreen-$value$""">
</$view>
\end

<$list filter="[list[$:/StoryList]]" variable="openTiddler">

<$fieldmangler>
<$button>Make Fullscreen

<$set name="fullscreenTiddler" value={{$:/plugins/admls/volant/state/fullscreen-tiddler!!text}}>
<$list filter="[tag[$:/config/Volant]suffix<fullscreenTiddler>]">
<$action-setfield $tiddler={{!!title}} top={{$:/plugins/admls/volant/state/fullscreen-tiddler!!top}} height={{$:/plugins/admls/volant/state/fullscreen-tiddler!!height}} left={{$:/plugins/admls/volant/state/fullscreen-tiddler!!left}} width={{$:/plugins/admls/volant/state/fullscreen-tiddler!!width}}/>
</$list>
</$set>

<$list filter="[tag[$:/config/Volant]suffix<openTiddler>]">
<$action-setfield $tiddler="$:/plugins/admls/volant/state/fullscreen-tiddler" text=<<openTiddler>> top={{!!top}} height={{!!height}} left={{!!left}} width={{!!width}}/>
</$list>

</$button>

<$button>Leave Fullscreen

<$list filter="[tag[$:/config/Volant]suffix<openTiddler>]">
<$action-setfield $tiddler={{!!title}} top={{$:/plugins/admls/volant/state/fullscreen-tiddler!!top}} height={{$:/plugins/admls/volant/state/fullscreen-tiddler!!height}} left={{$:/plugins/admls/volant/state/fullscreen-tiddler!!left}} width={{$:/plugins/admls/volant/state/fullscreen-tiddler!!width}}/>
<$action-setfield $tiddler="$:/plugins/admls/volant/state/fullscreen-tiddler" text="" top="" height="" left="" width=""/>
</$list>

</$button>
</$fieldmangler>
<$link to=<<openTiddler>>><$view tiddler=<<openTiddler>> field="title"></$view></$link>

</$list>