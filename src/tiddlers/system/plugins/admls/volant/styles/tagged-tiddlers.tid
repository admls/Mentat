\define backup(value)
<$list filter="[all[current]get[draft.of]] [all[current]!has[draft.of]] +[addprefix[$:/plugins/admls/volant/state/]]">
	<$view field=$value$>
		<$view tiddler="$:/plugins/admls/volant/config/backup-values" field="""backup-$value$""">
        </$view>
	</$view>
</$list>
\end

<$reveal type="match" stateTitle="$:/plugins/admls/volant/config/values" stateField="default-functionality" text="on">
<$set name="volant-default" value={{$:/plugins/admls/volant/config/tags!!default}}>
<$set name="volant-absolute" value={{$:/plugins/admls/volant/config/tags!!absolute}}>
<$list filter="[list[$:/StoryList]tag<volant-default>] [list[$:/StoryList]tag<volant-absolute>]">

[data-tiddler-title="<<currentTiddler>>"] {
top: <<backup top>>;
left: <<backup left>>;
width: <<backup width>>;
height: <<backup height>>;
z-index: <<backup z-index>>;
padding: 25px 15px 15px 15px;
overflow-y: auto;
}

[data-tiddler-title="<<currentTiddler>>"] .tc-titlebar {
font-size: 1.6em;
}

</$list>
</$set>
</$set>
</$reveal>