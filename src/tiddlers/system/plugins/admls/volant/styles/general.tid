/* Resizer Handles */

.resizer-left, .resizer-right {
width: 12px;
height: 12px;
background-color: {{$:/plugins/admls/volant/config/values!!resizer-color}};
}

.resizer-left {
cursor: ne-resize;
border-radius: 0% 70% 0% 0%;
}

.resizer-right {
cursor: se-resize;
border-radius: 70% 0% 0% 0%;
}

/* Tiddler Scrollbars */

.tc-tiddler-frame::-webkit-scrollbar {
	height: 4px;
    width: 4px;
    background: transparent;
}

.tc-tiddler-frame::-webkit-scrollbar-thumb {
    background: #999;
    -webkit-border-radius: 1ex;
}

.tc-tiddler-frame::-webkit-scrollbar-corner {
    background: transparent;
}

.tc-tiddler-frame,.tc-tiddler-frame * {
	scrollbar-color: lightgray #eee;
	scrollbar-width: thin;
}

/* Misc */

.tc-btn-invisible {
outline: none;
}

<$text text="*::selection"/> {
background-color: rgba(0,0,0,.3);
color: #fff;
}
