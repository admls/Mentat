.window-body .story-backdrop {
display: flex;
flex-direction: row;
}

.window-tabs {
flex: 1 1 auto;
display: inline-grid;
grid-auto-flow: column;
grid-template-columns: auto;
grid-auto-columns: 1fr;
justify-items: stretch;
}

.window-tabs .tc-tiddlylink {
position: relative;
background-color: <<colour tab-background>>;
border: solid <<colour tab-border>> 1px;
border-radius: 2px 2px 2px 2px;
color: black;
display: flex;
flex-direction: row;
justify-content: space-between;
font-weight: normal;
padding: 0px 3px 0px 3px;
white-space: nowrap;
width: 100%;
}

.window-tabs .tc-tiddlylink.window-tab-selected {
background-color: <<colour background>>;
}

.window-tabs .tc-tiddlylink:hover {
text-decoration: none;
}

.window-tabs .tc-tiddlylink > span {
white-space: nowrap;
overflow: hidden;
flex: 1 1 auto;
}

.window-tabs > .tc-reveal {
position: relative;
grid-column-start: auto;
grid-column-end: span 1;
white-space: nowrap;
margin: 0px 1px 0px 1px;
overflow: hidden;
}

.window-tabs .tc-droppable > .tc-droppable-placeholder {
position: absolute;
visibility: hidden;
width: 0px;
height: 100%;
}

.window-tabs .tc-droppable.tc-dragover > .tc-droppable-placeholder {
visibility: visible;
background-color: rgba(0,0,0,.5);
border: none;
width: 20px;
top: 0%;
left: -10px;
}

.window-tabs .tc-tiddlylink button {
background-color: inherit;
padding: 2px 0px 0px 3px;
height: 100%;
display: none;
position: absolute;
right: 3px;
}

.window-tabs .tc-tiddlylink:hover button {
width: auto;
display: block;
}

.window-body .story-backdrop button[title*="Create a new tiddler"] {
width: 22px;
height: 22px;
background-color: <<colour tab-background>>;
margin: 0px 0px 0px 2px;
border-radius: 2px 2px 0px 0px;
border: solid <<colour tab-border>> 1px;
padding-left: 2px;
flex: 0 0 22px;
}